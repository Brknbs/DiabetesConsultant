<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Side_Menu_Activity"
    tools:showIn="@layout/app_bar_side__menu_"
    android:background="@drawable/profile_bg"
    android:theme="@style/Theme.Design.NoActionBar">


    <Button
        android:id="@+id/buttonBloodSugar"
        android:layout_width="244dp"
        android:layout_height="76dp"
        android:layout_alignStart="@+id/buttonNutrition"
        android:layout_marginStart="1dp"
        android:layout_marginTop="114dp"
        android:background="#f341a4cc"
        android:drawableStart="@drawable/blood_sugar"
        android:drawablePadding="15dp"
        android:padding="20dp"
        android:text="ADD BLOOD SUGAR INFO" />

    <Button
        android:id="@+id/buttonExercise"
        android:layout_width="244dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:background="#f2994c"
        android:drawableStart="@drawable/exercises"
        android:padding="20dp"
        android:text="ADD EXERCISE INFO" />

    <Button
        android:id="@+id/buttonNutrition"
        android:layout_width="242dp"
        android:layout_height="74dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="314dp"
        android:background="#6fefb1"
        android:drawableStart="@drawable/nutrition"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="ADD NUTRITION INFO" />

    <Button
        android:id="@+id/buttonMedicine"
        android:layout_width="244dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="414dp"
        android:background="#f1375f"
        android:drawableStart="@drawable/medicines"
        android:padding="20dp"
        android:text="ADD MEDICINE INFO" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="ADD INFO"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>